{
	"version": "2.0.0",
	"tasks": [
	{
		"label": "build",
		"type": "shell",
		"command": "tput reset;./build.sh 1 1",
		"problemMatcher": {"owner": "cpp", "fileLocation": ["relative", "${workspaceFolder}"],
			"pattern": {
				"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
				"file": 1, "line": 2, "column": 3, "severity": 4, "message": 5
			}
		},
		"group": { "kind": "build", "isDefault": true }
	},
	{
		"label": "rebuild",
		"type": "shell",
		"command": "tput reset;./build.sh 1 0 1",
		"problemMatcher": {"owner": "cpp", "fileLocation": ["relative", "${workspaceFolder}"],
			"pattern": {
				"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
				"file": 1, "line": 2, "column": 3, "severity": 4, "message": 5
			}
		}
	},
	{
		"label": "rebuildAll",
		"type": "shell",
		"command": "tput reset;./build.sh 1 1 1",
		"problemMatcher": {"owner": "cpp", "fileLocation": ["relative", "${workspaceFolder}"],
			"pattern": {
				"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
				"file": 1, "line": 2, "column": 3, "severity": 4, "message": 5
			}
		}
	},
	{
		"label": "release",
		"type": "shell",
		"command": "tput reset;./build.sh 0 1 0",
		"problemMatcher": {"owner": "cpp", "fileLocation": ["relative", "${workspaceFolder}"],
			"pattern": {
				"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
				"file": 1, "line": 2, "column": 3, "severity": 4, "message": 5
			}
		}
	},	
	{
		"label": "rebuildRelease",
		"type": "shell",
		"command": "tput reset;./build.sh 0 1 1",
		"problemMatcher": {"owner": "cpp", "fileLocation": ["relative", "${workspaceFolder}"],
			"pattern": {
				"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
				"file": 1, "line": 2, "column": 3, "severity": 4, "message": 5
			}
		}
	},	
	{
		"label": "clean",
		"type": "shell",
		"command": "tput reset; make clean",
		"problemMatcher": {"owner": "cpp", "fileLocation": ["relative", "${workspaceFolder}"],
			"pattern": {
				"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
				"file": 1, "line": 2, "column": 3, "severity": 4, "message": 5
			}
		},
	}
	]
}