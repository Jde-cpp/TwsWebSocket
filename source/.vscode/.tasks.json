{
	"version": "2.0.0",
	"tasks": [
	{
		"label": "build",
		"type": "shell",
		"command": "tput reset;./buildc.sh",
		"problemMatcher": {"owner": "cpp", "fileLocation": ["relative", "${workspaceFolder}"],
			"pattern": {
				"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
				"file": 1, "line": 2, "column": 3, "severity": 4, "message": 5
			}
		},
		"group": { "kind": "build", "isDefault": true }
	},
	{
		"label": "rebuild",
		"type": "shell",
		"command": "tput reset;./buildc.sh asan 1 0",
		"problemMatcher": {"owner": "cpp", "fileLocation": ["relative", "${workspaceFolder}"],
			"pattern": {
				"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
				"file": 1, "line": 2, "column": 3, "severity": 4, "message": 5
			}
		}
	},
	{
		"label": "rebuildAll",
		"type": "shell",
		"command": "tput reset;./buildc.sh asan 1 1",
		"problemMatcher": {"owner": "cpp", "fileLocation": ["relative", "${workspaceFolder}"],
			"pattern": {
				"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
				"file": 1, "line": 2, "column": 3, "severity": 4, "message": 5
			}
		}
	},
	{
		"label": "release",
		"type": "shell",
		"command": "tput reset;./buildc.sh RelWithDebInfo 0 1",
		"problemMatcher": {"owner": "cpp", "fileLocation": ["relative", "${workspaceFolder}"],
			"pattern": {
				"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
				"file": 1, "line": 2, "column": 3, "severity": 4, "message": 5
			}
		}
	},
	{
		"label": "rebuildRelease",
		"type": "shell",
		"command": "tput reset;./buildc.sh RelWithDebInfo 1 1",
		"problemMatcher": {"owner": "cpp", "fileLocation": ["relative", "${workspaceFolder}"],
			"pattern": {
				"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
				"file": 1, "line": 2, "column": 3, "severity": 4, "message": 5
			}
		}
	},
	{
		"label": "echo",
		"type": "shell",
		"command": "clear;echo compile ${fileBasename}"
	},
	{
		"type": "shell",
		"label": "compile",
		"command": "ccache",
		"args": ["g++-8", "-O0","-g","-I${env:REPO_DIR}/boostorg/boost_1_72_0","-I../../Framework/source/log/server/proto","-I${env:REPO_DIR}/tws-api/source/cppclient/client","-I${env:REPO_DIR}/spdlog/include/","-I${env:REPO_DIR}/json/include","-I${env:REPO_DIR}/matio/src", "-Wall","-Wno-unknown-pragmas","-fsanitize=address","-fno-omit-frame-pointer","-pthread","-std=c++17","-include","${workspaceFolder}/.obj/asan/CMakeFiles/Jde.TwsWebSocket.dir/CMakeFiles/Jde.TwsWebSocket.dir/cmake_pch.hxx","-o","${workspaceFolder}/.obj/asan/CMakeFiles/Jde.TwsWebSocket.dir/${fileBasename}.o","-c", "${file}"],
		"problemMatcher": ["$gcc"],
		"dependsOrder": "sequence",
		"dependsOn": ["echo"],
	},
	{
		"label": "clean",
		"type": "shell",
		"command": "tput reset; cd .obj/debug;make clean",
		"problemMatcher": {"owner": "cpp", "fileLocation": ["relative", "${workspaceFolder}"],
			"pattern": {
				"regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
				"file": 1, "line": 2, "column": 3, "severity": 4, "message": 5
			}
		},
	}
	]
}